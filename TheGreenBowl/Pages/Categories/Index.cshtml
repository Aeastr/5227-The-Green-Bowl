@page
@model TheGreenBowl.Pages.Categories.IndexModel
@{
ViewData["Title"] = "Categories";
bool isAdmin = User.IsInRole("Admin");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Categories</h1>
    @if (isAdmin)
    {
    <a asp-page="./Create" class="btn btn-success">
        <i class="fa-solid fa-plus"></i> Add Category
    </a>
    }
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Menus Count</th>
                @if (isAdmin)
                {
                <th>Actions</th>
                }
            </tr>
            </thead>
            <tbody>
            @foreach (var category in Model.Categories)
            {
            <tr>
                <td>@category.name</td>
                <td>@category.description</td>
                <td>@category.MenusCount</td>
                @if (isAdmin)
                {
                <td>
                    <a asp-page="./Edit" asp-route-id="@category.categoryID" class="btn btn-sm btn-outline-primary">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                    <a asp-page="./Delete" asp-route-id="@category.categoryID" class="btn btn-sm btn-outline-danger ms-1">
                        <i class="fa-solid fa-trash-can"></i>
                    </a>
                </td>
                }
            </tr>
            }
            </tbody>
        </table>
    </div>
</div>
