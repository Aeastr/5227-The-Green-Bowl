@page
@model TheGreenBowl.Pages.Categories.DeleteModel
@{
ViewData["Title"] = "Delete Category";
}

<h1>Delete Category</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this category?</h3>
    @if (Model.MenusUsingCategory > 0)
    {
    <p class="text-danger">
        <strong>Warning:</strong> This category is currently used by @Model.MenusUsingCategory menu(s).
        Deleting it will remove it from those menus.
    </p>
    }
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5>Category Details</h5>
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.Category.name</h5>
        <p class="card-text">@Model.Category.description</p>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="Category.categoryID" />

    <div class="form-group">
        <button type="submit" class="btn btn-danger">
            <i class="fa-solid fa-trash"></i> Delete
        </button>
        <a asp-page="./Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Cancel
        </a>
    </div>
</form>
