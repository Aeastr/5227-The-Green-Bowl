@page
@model IndexModel
@{
    ViewData["Title"] = "The Green Bowl | Fresh & Delicious Food";
}

<!-- Hero Section with Background Image and Gradient Overlay -->
<div class="hero-section">
    <div class="container">
        <div class="row py-5">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold text-dark">Fresh, Wholesome & Delicious</h1>
                <p class="lead fs-4">Where everyone finds something to love at The Green Bowl.</p>
                <p class="mb-4">From hearty toasties and gourmet salads to plant-based specialties - we've got you covered with fresh, locally-sourced ingredients.</p>
                <div class="d-flex gap-3 mt-4">
                    <a class="btn btn-success btn-lg" asp-page="./Menu/Index" role="button">View Menu</a>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Menu Categories Highlight -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center fw-bold mb-5">Something for Everyone</h2>
        <div class="row g-4 text-center">
            <div class="col-6 col-md-3">
                <div class="p-4 bg-white rounded shadow-sm h-100">
                    <img src="~/images/toasties.jpeg" alt="Gourmet Toasties" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    <h3 class="h5">Gourmet Toasties</h3>
                    <p class="small">Melty, savory, and satisfying</p>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="p-4 bg-white rounded shadow-sm h-100">
                    <img src="~/images/salad_bowl.jpeg" alt="Fresh Salads" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    <h3 class="h5">Fresh Salads</h3>
                    <p class="small">Crisp, colorful, and nutritious</p>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="p-4 bg-white rounded shadow-sm h-100">
                    <img src="~/images/smoothie.jpg" alt="Smoothies & Drinks" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    <h3 class="h5">Smoothies & Drinks</h3>
                    <p class="small">Refreshing and energizing</p>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="p-4 bg-white rounded shadow-sm h-100">
                    <img src="~/images/veggie_wrap.jpg" alt="Plant-Based Options" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    <h3 class="h5">Plant-Based Options</h3>
                    <p class="small">Flavorful vegan & vegetarian choices</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Our Story Section -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0">
                <!-- Replace with an image of your restaurant interior or chef -->
                <img src="~/images/restaurant-interior.jpg" alt="Our Restaurant" class="img-fluid rounded shadow">
            </div>
            <div class="col-md-6">
                <h2 class="fw-bold">Our Story</h2>
                <p class="lead">Founded in 2018, The Green Bowl was born from a passion for good food that makes you feel good too.</p>
                <p>We believe that healthy food should never compromise on flavor. Our diverse menu caters to everyone - whether you're craving a hearty toastie, a fresh salad, or exploring plant-based options. We source locally whenever possible and prepare everything with care to deliver an unforgettable dining experience.</p>
            </div>
        </div>
    </div>
</section>

